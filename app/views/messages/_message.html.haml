.main-chat__contents__box{"data-message-id": message.id}
  .main-chat__contents__box__upper-message
    .main-chat__contents__box__upper-message__user-name
      = message.user.name
    .main-chat__contents__box__upper-message__date
      = message.created_at.strftime("%Y-%m-%d %H:%M")
  .main-chat__contents__box__lower-message
    .main-chat__contents__box__lower-message__text
      - if message.content.present?
        %p.main-chat__contents__box__lower-message__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
