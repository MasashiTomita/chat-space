.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__user-name
        = current_user.name
      .side-bar__header__box__menu
        .side-bar__header__box__menu__group-btn
        = link_to new_group_path do
          = icon("fas", "edit", class:"icon")
        .side-bar__header__box__menu__edit-btn
        = link_to edit_user_path(current_user) do
          = icon("fas", "cog", class: "icon")
          
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__box 
        = link_to group_messages_path(group) do
          .side-bar__group__box__name
            = group.name
          .side-bar__group__box__message
            = group.show_last_message
        